<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Spartan&display=swap">
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css" integrity="sha256-mmgLkCYLUQbXn0B1SRqzHar6dCnv9oZFPEC1g1cwlkk=" crossorigin="anonymous" />
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <nav 
            class="navbar navbar-light bg-light px-3" 
            {{ is_granted('ROLE_PREVIOUS_ADMIN') ? 'style="background-color: brown !important"' }}
          <a class="navbar-brand" href="{{path('homePage')}}">
            <i style="color: #444; font-size: 2rem;" class="pb-1 fad fa-cauldron"></i>
            <p class="pl-2 d-inline font-weight-bold" style="color: #444;">Cauldron Overflow</p>
          </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbar-collapsable" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
          
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('popular_answers') }}">Answers</a>
                    </li>
                    {% if is_granted('ROLE_ADMIN') %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_admin') }}">Admin</a>
                        <a class="nav-link" href="{{ path('homePage', {
                                            '_switch_user': 'user@pp.pp'
                                        }) }}">&nbsp Impersonation &nbsp</a>
                    </li>
                    {% endif %}
                </ul>

                {% if is_granted('ROLE_USER') %}
                    <h4>Hi {{ app.user.firstName }} &nbsp</h4>

                    {%if is_granted('ROLE_PREVIOUS_ADMIN') %}
                         <a class="nav-link" href="{{ path('homePage', {
                                            '_switch_user': '_exit'
                                        }) }}">&nbsp Exit Impersonation &nbsp</a>
                    {% endif %}

                    <a class="nav-link" href="{{ path('app_logout') }}"> LogOut </a>
                {% else %}

            <a class="nav-link text-black-50 mx-2" href="{{ path('app_login') }}">Log In</a>
            <a href="#" class="btn btn-dark">Sign up</a>
            {% endif %}
        </nav>

        {% block body %}{% endblock %}
        <footer class="mt-5 p-3 text-center">
            Made with <i style="color: red;" class="fa fa-heart"></i> by <a style="color: #444; text-decoration: underline;" href="https://pzon.eu" target="blank">Pzon</a>
        </footer>
        {% block javascripts %}
              {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </body>
</html>
