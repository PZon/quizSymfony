            <li class="mb-4">
            {% if showQuestion|default(false) %}
                <a href="{{path('questionShow',
                {slug: answer.question.slug}) }}" class="mb-1 link-secondary"> 
                    <strong>Question:</strong>{{answer.question.question}}
                </a>
            {% endif %}
                <div class="row">
                    <div class="col-1">
                        <img src="{{ asset('img/tisha.png') }}" width="50" height="50">
                    </div>
                    <div class="col-9">
                        <p>{{ answer.content|parse_markdown }}</p>
                        <p>-- {{answer.username}} </p>
                    </div>
                    <div class="col-2 text-end">
                     <small>{{ answer.createdAt|ago }}</small>
                     <div>
                      <form action="{{ path('answer_vote', {id: answer.id})}}" method="POST">
                         <button class="vote-up btn btn-link" name="direction" value="up"><i class="far fa-arrow-alt-circle-up"></i></button>
                         <button class="vote-down btn btn-link" name="direction" value="down"><i class="far fa-arrow-alt-circle-down"></i></button>
                         <span>{{answer.votes}}</span>
                      </form>
                     </div>
                    </div>
                </div>
            </li>